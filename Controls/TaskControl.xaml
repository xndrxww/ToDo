<UserControl x:Class="ToDo.Controls.TaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDo.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="1050"
             MouseDown="UserControl_MouseDown">
    <Grid x:Name="taskControl" Margin="0,10,0,10" Background="Transparent">
        <DockPanel>
            <CheckBox x:Name="completeTaskCheck" VerticalAlignment="Center" Margin="20,0,0,0" HorizontalAlignment="Left" Checked="completeTaskCheck_Checked"></CheckBox>
            <StackPanel VerticalAlignment="Center" Margin="40,0,0,0">
                <TextBlock x:Name="taskNameText" VerticalAlignment="Center" FontSize="20">задача</TextBlock>
                <TextBlock x:Name="taskDesciptionText" VerticalAlignment="Center"  FontSize="16" Opacity="0.5">описание</TextBlock>
            </StackPanel>
            <DockPanel HorizontalAlignment="Right">
                <TextBlock x:Name="deadLineText" VerticalAlignment="Center" FontSize="16" Foreground="DarkSeaGreen" Margin="0,0,80,0"></TextBlock>
            </DockPanel>
        </DockPanel>
    </Grid>
</UserControl>
