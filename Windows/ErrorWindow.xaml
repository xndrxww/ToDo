<Window x:Class="ToDo.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo.Windows"
        mc:Ignorable="d"
        Title="Окно ошибок" Height="260" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" UseLayoutRounding="True">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Image Source="\Icons\close.png" Width="45" Margin="0,20,0,0"/>
            <TextBlock FontSize="25" TextAlignment="Center" Margin="0,20,0,0"><Bold>Ошибка...</Bold></TextBlock>
            <TextBlock x:Name="errorTxt" Text="Тестовая ошибка" Margin="0,5,0,0" TextAlignment="Center"/>
            <Button x:Name="okButton" Margin="0,25,0,0" Click="okButton_Click" Width="150">OK</Button>
        </StackPanel>
    </Grid>
</Window>
